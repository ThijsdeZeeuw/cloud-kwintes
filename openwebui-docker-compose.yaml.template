version: '3'

services:
  openwebui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: openwebui
    restart: unless-stopped
    environment:
      - OLLAMA_API_BASE_URL=http://ollama:11434/api
      - WEBUI_SECRET_KEY=${OPENWEBUI_SECRET_KEY}
      - WEBUI_USERNAME=${OPENWEBUI_USERNAME}
      - WEBUI_PASSWORD=${OPENWEBUI_PASSWORD}
      - WEBUI_PORT=8080
      - WEBUI_HOST=0.0.0.0
      - WEBUI_DEBUG=false
      - WEBUI_TITLE=OpenWebUI
      - OLLAMA_HOST=ollama
      - OLLAMA_PORT=11434
      - OLLAMA_ORIGINS=*
      - WEBUI_SSL=false
      - WEBUI_SSL_CERT=/etc/certs/cert.pem
      - WEBUI_SSL_KEY=/etc/certs/key.pem
    ports:
      - "8080:8080"
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8080/api/health || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    depends_on:
      ollama:
        condition: service_healthy
    volumes:
      - openwebui_data:/app/backend/data

volumes:
  openwebui_data:
    name: openwebui_data

networks:
  app-network:
    external: true 